<form class="post-form">
  <label for="post-title">Title</label>
  <input type="text"
         name="title"
         value="<%= post.get('title') %>"
         id="post-title">

  <label for="post-body">Body</label>
  <textarea name="body"
            id="post-body"><%= post.get('body') %></textarea>

  <button type="submit" class="submit-post">Submit</button>
</form>
